{
  "name": "EZ on the I",
  "description": "Makes white backgrounds easy to read",
  "version": "2.0",
  "permissions": [
    "tabs", "http://*.stackoverflow.com/*"
  ],
  "icons": {"128": "icon.png" },
  "content_scripts": [
    {
      "matches": ["http://*.stackoverflow.com/*"],
      "js": ["changeColour.js"],
	  "run_at": "document_end"
    }
  ],
  "background": {
    "scripts": ["changeColour.js"],
    "persistent": false
  },
  "browser_action": {
    "default_title": "Beautify it"
  },
  "manifest_version": 2
}

